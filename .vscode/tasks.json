{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件（本项目）",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/FeOutput\\CSteamRestarter.exe",
                "/MT",
                "csteamrestarter.c",
                "-I",
                "C:\\Environment\\GnuWin32\\include",
                "-link",
                "C:\\Environment\\GnuWin32\\lib\\libintl.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "编译器: cl.exe"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件（本项目）",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-static",
                "csteamrestarter.c",
                "-o",
                "Output\\CSteamRestarter.exe",
                "-lintl",
                "-liconv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: gcc.exe"
        }
    ],
    "version": "2.0.0"
}